{
  "name": "pete.design",
  "version": "1.0.0",
  "description": "",
  "private": "true",
  "main": "index.js",
  "scripts": {
    "clean": "rimraf dist && mkdirp dist/",
    "lint": "jshint src/js/*.js",
    "prebuild": "npm run clean && mkdirp dist/static/css dist/static/js dist/static/img",
    "prebuild:js": "npm run lint",
    "prebuild:img": "mkdirp dist/static/img/logo dist/static/img/backgrounds",
    "prebuild:vendor": "cat src/js/vendor/*.js > dist/static/js/vendor.min.js",
    "build:vendor": "uglifyjs dist/static/js/vendor.min.js -o dist/static/js/vendor.min.js",
    "build:js": "uglifyjs src/js/main.js -o dist/static/js/main.min.js",
    "build:html": "jade -H -P src/jade -o dist",
    "build:css": "postcss -u postcss-import -u postcss-modular-scale -u postcss-inline-svg -u precss -u rucksack-css -u lost -u autoprefixer -u cssnano src/css/main.css -o  dist/static/css/main.min.css",
    "build:img": "cp -R src/img dist/static",
    "watch:vendor": "onchange 'src/js/vendor/*.js' -- npm run build:vendor",
    "watch:css": "onchange 'src/css/**/*.css' -- npm run build:css",
    "watch:js": "onchange 'src/js/*' -- npm run build:js",
    "watch:html": "onchange 'src/jade/**/*' -- npm run build:html",
    "watch:img": "onchange 'src/img/**/*' -- npm run build:img",
    "watch": "npm-run-all --parallel build:* watch:*",
    "build": "npm-run-all --parallel build:*",
    "server": "live-server --port=8080 --host=localhost dist/",
    "start": "npm-run-all --parallel build server watch:*"
  },
  "author": "Pete Petrash",
  "license": "ISC",
  "dependencies": {
    "autoprefixer": "^6.3.3",
    "cssnano": "^3.5.2",
    "jade": "^1.11.0",
    "jquery": "^2.2.0",
    "jshint": "^2.9.1",
    "live-server": "^0.9.2",
    "lost": "^6.7.1",
    "mkdirp": "^0.5.1",
    "npm-run-all": "^1.5.1",
    "onchange": "^2.0.0",
    "postcss": "^5.0.16",
    "postcss-cli": "^2.5.1",
    "postcss-import": "^8.0.2",
    "postcss-inline-svg": "^1.3.2",
    "postcss-modular-scale": "^2.5.1",
    "precss": "^1.4.0",
    "rimraf": "^2.5.2",
    "rucksack-css": "^0.8.5",
    "smoothstate": "^0.7.2",
    "uglify-js": "^2.6.1",
    "watch": "^0.17.1"
  },
  "devDependencies": {
    "postcss-import": "^8.1.2"
  }
}
